    "web-component-analyzer": "^2.0.0"
  },
  "dependencies-comments": {
    "react": "Required for Storybook",
    "react-dom": "Required for Storybook"
  },
  "files": [
    "components/*.js",
    "components/*.d.ts",
    "react/*.js",
    "react/*.d.ts",
    "theme/hot.css",
    "i18n/*.xliff"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
